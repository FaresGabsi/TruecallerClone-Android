<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        android:padding="8dp">

    <!-- LinearLayout inside CardView -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

        <!-- ID and Name of the contact -->
        <ImageView
                android:src="@drawable/baseline_account_circle_24"
                android:layout_width="181dp"
                android:layout_height="75dp" android:id="@+id/imageView" android:layout_weight="1"
                card_view:srcCompat="@drawable/baseline_account_circle_24"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_idContact" android:textSize="10sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_nomContact" android:textSize="14sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_numtelContact"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="113dp"
                    android:layout_height="match_parent">
                <ImageView
                        android:src="@drawable/baseline_call_24"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:id="@+id/imgview_call_Contact" android:layout_weight="1"
                        tools:srcCompat="@drawable/baseline_call_24"/>
                <ImageView
                        android:src="@drawable/baseline_edit_24"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:id="@+id/imgview_edit_Contact" android:layout_weight="1"
                        tools:srcCompat="@drawable/baseline_edit_24"/>
                <ImageView
                        android:src="@drawable/baseline_delete_24"
                        android:layout_width="16dp"
                        android:layout_height="16dp" android:id="@+id/imgview_delete_Contact" android:layout_weight="1"
                        tools:srcCompat="@drawable/baseline_delete_24"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Phone number of the contact -->

    </LinearLayout>

</androidx.cardview.widget.CardView>
